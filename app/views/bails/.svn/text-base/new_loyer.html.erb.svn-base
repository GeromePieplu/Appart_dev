<h1>Nouvelle loyer</h1>
<%= error_messages_for :montant_loyer %>
<% form_for :bail, @bail, :url => {:action => "create_loyer", :id => @bail.id } do |field_bail| %>
<% fields_for(@montant_loyer) do |f| %>
	<br>
	<p>
	    <b>Date nouveau loyer</b>
	    <br/>
		<%= date_select(:montant_loyer, :date_debut, :order=>[:day ,:month,:year] ) %>
	</p>
  <p>
    <b><%= f.label :montant %><br /></b>
    <%= f.text_field :montant %>
  </p>
<% end %>
<p>
    <%= field_bail.submit "Creer" %>
</p>
<% end %>
<%= link_to 'Retour',  :action => 'show', :id => @bail.id %>